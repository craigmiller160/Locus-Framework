<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns="io.craigmiller160.github.com/locus-schema"
           targetNamespace="io.craigmiller160.github.com/locus-schema"
           elementFormDefault="qualified">


    <xs:element name="Locus" type="Locus"/>


    <xs:complexType name="Locus">
        <xs:choice maxOccurs="1">
            <xs:element name="packages" type="packages"/>
            <xs:element name="scanning-filters" type="scanning-filters"/>
        </xs:choice>
    </xs:complexType>

    <xs:complexType name="packages">
        <xs:choice>
            <xs:element name="package" type="package"/>
        </xs:choice>
    </xs:complexType>

    <xs:complexType name="scanning-filters">
        <xs:choice maxOccurs="1">
            <xs:element name="exclusions" type="exclusions" maxOccurs="1"/>
            <xs:element name="inclusions" type="inclusions" maxOccurs="1"/>
        </xs:choice>
    </xs:complexType>

    <xs:complexType name="exclusions">
        <xs:choice>
            <xs:element name="inclusion" type="filter" />
        </xs:choice>
    </xs:complexType>

    <xs:complexType name="inclusions">
        <xs:choice>
            <xs:element name="inclusion" type="filter" />
        </xs:choice>
    </xs:complexType>

    <xs:complexType name="package">
        <xs:attribute name="name" type="xs:string" use="required"/>
    </xs:complexType>

    <xs:complexType name="filter">
        <xs:attribute name="prefix" type="xs:string" use="required"/>
    </xs:complexType>

</xs:schema>